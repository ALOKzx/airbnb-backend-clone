<%- include('../partials/head') %>
  
<body class="bg-gray-100 min-h-screen">
  <%- include('../partials/nav') %>
  
  <div class="max-w-md mx-auto mt-9 p-8 bg-white rounded-xl shadow-lg transform hover:shadow-2xl transition duration-300">
  <h1 class="text-3xl font-bold text-red-500 mb-8 text-center relative">
    Sign Up
    <div class="h-1 w-20 bg-red-500 mx-auto mt-2 rounded-full"></div>
  </h1>

  <main>
    <%- include('../partials/errorMessage') %>
    
    <form action="/signup" method="post" class="space-y-6">
    <div class="flex space-x-4">
      <input
      type="text"
      name="firstName"
      value="<%= oldValues.firstName ? oldValues.firstName: '' %>"
      placeholder="First Name"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
      required
      />

      <input
      type="text"
      name="lastName"
      value="<%= oldValues.lastName ? oldValues.lastName: '' %>"
      placeholder="Last Name"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
      />
    </div>

    <input
      type="email"
      name="email"
      value="<%= oldValues.email ? oldValues.email: '' %>"
      placeholder="Email address"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
      required
    />

    <input
      type="password"
      name="password"
      placeholder="Create password"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
      required
    />

    <input
      type="password"
      name="confirmPassword"
      placeholder="Confirm password"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
      required
    />

    <div class="bg-gray-50 p-4 rounded-lg">
      <p class="text-gray-700 font-medium mb-3">I am a:</p>
      <div class="flex justify-center items-center space-x-6">
        <label for="guest" class="flex items-center cursor-pointer hover:text-red-500 transition">
          <input type="radio" name="userType" value="guest"
            <%= oldValues.userType === 'guest' ? 'checked' : '' %>
            id="guest" class="mr-2 text-red-500 focus:ring-red-500" />
          <span class="text-gray-700">Guest</span>
        </label>
        
        <label for="host" class="flex items-center cursor-pointer hover:text-red-500 transition">
          <input type="radio" name="userType" value="host"
            <%= oldValues.userType === 'host' ? 'checked' : '' %>
            id="host" class="mr-2 text-red-500 focus:ring-red-500" />
          <span class="text-gray-700">Host</span>
        </label>
        
      </div>
    </div>

    <div class="flex items-center">
      <input
      type="checkbox"
      name="terms"
      id="terms"
      class="w-4 h-4 text-red-500 border-gray-300 rounded focus:ring-red-500"
      required
      />
      <label for="terms" class="ml-2 text-gray-700 cursor-pointer hover:text-red-500 transition">
      I accept the terms and conditions
      </label>
    </div>

    <button 
      type="submit"
      class="w-full bg-red-500 text-white py-3 px-4 rounded-lg hover:bg-red-600 transform hover:-translate-y-0.5 transition-all duration-150 font-medium"
    >
      Create Account
    </button>
    </form>
    <p class="mt-6 text-center text-gray-600 text-sm">
      Already have an account? 
      <a href="/login" class="text-red-500 hover:text-red-600 font-medium">Login here</a>
      </p>
  </main>
  </div>
</body>
</html>
