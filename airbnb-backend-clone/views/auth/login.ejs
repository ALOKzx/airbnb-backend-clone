<%- include('../partials/head') %>
  
<body class="bg-gray-100 min-h-screen"></body>
  <%- include('../partials/nav') %>
  
  <div class="max-w-md mx-auto my-20 p-8 bg-white rounded-xl shadow-lg transform hover:shadow-2xl transition duration-300">
  <h1 class="text-3xl font-bold text-red-500 mb-2 text-center">Welcome Back</h1>
  <p class="text-gray-500 text-center mb-8">Please sign in to continue</p>
  
  <main>
    <%- include('../partials/errorMessage') %>
    <form action="/login" method="post" class="space-y-6">
    <div class="space-y-2">
      <label for="email" class="block text-gray-600 text-sm font-medium">Enter Email</label>
      <div class="relative">
      <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"></svg>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </span>
      <input
        type="email"
        id="email"
        value="<%= oldValues.email ? oldValues.email: '' %>"
        name="email"
        placeholder="Enter your email or username"
        class="w-full pl-10 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
        required
      />
      </div>
    </div>

    <div class="space-y-2">
      <label for="password" class="block text-gray-600 text-sm font-medium">Password</label>
      <div class="relative">
      <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"></svg>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      </span>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Enter your password"
        class="w-full pl-10 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
        required
      />
      </div>
    </div>

    <div class="flex items-center justify-between">
      <label class="flex items-center">
      <input type="checkbox" class="form-checkbox text-red-500 h-4 w-4">
      <span class="ml-2 text-sm text-gray-600">Remember me</span>
      </label>
      <a href="/forgot-password" class="text-sm text-red-500 hover:text-red-600">Forgot password?</a>
    </div>
  
    <button 
      type="submit"
      class="w-full bg-red-500 text-white py-3 px-4 rounded-lg hover:bg-red-600 transform hover:-translate-y-0.5 transition duration-200 font-medium focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
    >
      Sign In
    </button>
    </form>

    <p class="mt-6 text-center text-gray-600 text-sm">
    Don't have an account? 
    <a href="/signup" class="text-red-500 hover:text-red-600 font-medium">Register here</a>
    </p>
  </main>
  </div>
</body>
</html>
