<%- include('../partials/head') %>
  <body>
    <%- include('../partials/nav') %>
    
    <main>
      <div>
        <section class="py-10 bg-gray-50 sm:py-16 lg:py-14">
          <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
            <div class="max-w-2xl mx-auto text-center">
              <h2 class="text-3xl font-bold leading-tight text-black sm:text-4xl lg:text-5xl">Welcome to AirBnB</h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
              <% registeredHouse.forEach(house => { %>
                <div class="p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300">
                  <a href="#" class="block overflow-hidden rounded-lg">
                    <img class="object-cover w-full h-64 transition-transform duration-300 hover:scale-105" src="<%= house.housePic %>" alt="<%= house.houseName %>" />
                  </a>
                  
                  <h3 class="mt-6 text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
                    <a href="#"><%= house.houseName %></a>
                  </h3>
                  <p class="mt-4 text-gray-600"><span class="font-medium">Location:</span> <%= house.houseLocation %></p>
                  <p class="mt-2 mb-2 text-2xl font-bold text-blue-600">₹<%= house.housePrice %> <span class="text-sm font-normal text-gray-600">/night</span></p>
                  <%- include('../partials/card-favourites', {house}) %>
                    <a href="/houses/<%= house._id %>" class="mt-2 block w-full bg-fuchsia-600 text-white text-center py-2 px-4 rounded-lg hover:bg-fuchsia-700 transition-colors duration-300 font-medium">Details</a>
                  <div class="h-0 mt-6 mb-4 border-t-2 border-gray-100"></div>
                  <div class="flex items-center">
                    <span class="text-sm font-medium text-gray-700">Rating:</span>
                    <span class="ml-2 text-yellow-500 text-lg"><%= house.houseRating %>⭐</span>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>
