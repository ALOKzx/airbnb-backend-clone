<%- include('../partials/head') %>

<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <main class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto bg-white rounded-lg shadow-md">
      <!-- Image Gallery Section -->
      <div class="relative h-[60vh] overflow-hidden">
        <img class="w-full h-full object-cover" src="<%= house.housePic %>" alt="<%= house.houseName %>" />
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6">
          <h1 class="text-4xl font-bold text-white"><%= house.houseName %></h1>
          <p class="text-xl text-white/90"><%= house.houseLocation %></p>
        </div>
      </div>

      <!-- Content Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 p-8">
        <!-- Main Content -->
        <div class="md:col-span-2 space-y-6">
          <!-- Description Section -->
          <section class="ml-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              <%= house.houseDescription|| 'No description available' %>
            </p>
          </section>

          <!-- Overview Section -->
          <section class="space-y-6 ml-6 mr-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Overview</h2>
            <div class="grid grid-cols-2 gap-6">
              <div class="p-4 bg-gray-50 rounded-lg">
                <p class="text-sm text-gray-600">Rating</p>
                <p class="text-xl font-bold text-yellow-500"><%= house.houseRating %> ⭐</p>
              </div>
              
              <div class="p-4 bg-gray-50 rounded-lg">
                <%- include('../partials/Favourites') %>
              </div>
              <div class="p-4 bg-gray-50 rounded-lg flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <div>
                  <p class="text-sm text-gray-600">Host</p>
                  <p class="text-xl font-bold text-gray-900"><%= userHost.firstName + " " + userHost.lastName %></p>
                </div>
              </div>
              <div class="p-4 bg-gray-50 rounded-lg flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-5 10h-.01M5 8h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v2a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="text-sm text-gray-600">Contact</p>
                  <p class="text-xl font-bold text-gray-900"><%= userHost.email %></p>
                </div>
              </div>
            </div>
          </section>
        </div>

        <!-- Booking Card -->
        <div class="md:col-span-1">
          <div class="sticky top-8 bg-white rounded-xl shadow-lg p-6 border border-gray-200">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Book this place</h3>
            <p class="text-3xl font-bold text-blue-600 mb-4">₹<%= house.housePrice %> <span class="text-sm font-normal text-gray-600">/night</span></p>
            
            <form class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">Check-in</label>
                <input type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Check-out</label>
                <input type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
              </div>
              <button type="submit" class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 transition-colors duration-300 font-medium">
                Book Now
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
